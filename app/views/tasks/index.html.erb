<div class="row">
  <div class="col-md-12">
    <div class="white-box">
      <p id="notice"><%= notice %></p>

      <h1>Tasks</h1>
      <br>

      <%= link_to 'New Task', new_task_path %>

      <div class="row">
        <div class="col-lg-12">
          <div class="white-box">
            <div class="table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th><%= link_to 'Task', sort: 'task_name' %></th>
                  <th><%= link_to 'Created By', sort: 'user_name' %></th>
                  <th><%= link_to 'Created On', sort:'created_at' %></th>
                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @tasks.each do |task| %>
                  <tr>
                    <td><%= task.task_name %></td>
                    <td><%= task.user_name %></td>
                    <td><%= task.created_at%></td>
                    <td><%= link_to 'Show', task %></td>
                    <% if session[:username] == task.user_name %>
                      <td><%= link_to 'Edit', edit_task_path(task) %></td>
                    <% end %>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>